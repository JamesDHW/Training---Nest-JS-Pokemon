// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id               Int            @id @default(autoincrement())
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  species          PokemonSpecies @relation(fields: [id], references: [id])
  level            Int            @default(1)
}

model PokemonSpecies {
  id        Int           @id @default(autoincrement())
  name      String        @unique
  url       String        @unique
  types     PokemonType[]
  Pokemon   Pokemon[]
}

model PokemonType {
  id               Int              @id @default(autoincrement())
  name             String           @unique
  weaknesses       PokemonType?     @relation("TypeWeakness", fields: [name], references: [name])
  strengths        PokemonType?     @relation("TypeWeakness")
  species          PokemonSpecies[]
}
